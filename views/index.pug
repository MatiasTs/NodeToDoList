extends layout
block content
    .container
        h1.titulo= title
        a.boton.agregar(href="/add") Agregar Tarea
        ul
            each task in tasks
                li
                    p= `${task.id}- ${task.title}`
                    
                    a.boton(href=`/completed/${task.id}`) #{task.completed ? '✅' : '❌'}
                    a.boton.eliminar(href=`/delete/${task.id}`) Eliminar
                    a.boton.editar(href=`/edit/${task.id}`) Editar